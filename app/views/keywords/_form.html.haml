= form_for([keyword.site, keyword]) do |f|
  - if keyword.errors.any?
    #error_explanation
      %h2
        = pluralize(keyword.errors.count, "error")
        = "prohibited this keyword from being saved:"

      %ul
        - keyword.errors.full_messages.each do |msg|
          %li
            = msg

  .field
    = f.text_field :word
    = f.hidden_field :site_id
    = f.submit
